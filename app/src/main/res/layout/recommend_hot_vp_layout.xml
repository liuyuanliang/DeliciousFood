<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="560dp"
    android:orientation="vertical">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="@null"
        android:drawableLeft="@drawable/tj_zuire_goods"
        android:text="最热商品"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp">

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_hot"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <custem.NavView
            android:id="@+id/nv_hot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            app:checkedimg="@drawable/dot_meitu_1"
            app:count="3"
            app:uncheckedimg="@drawable/page" />
    </RelativeLayout>
    <TableLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sdv_hot_1"
                    android:layout_width="180dp"
                    android:layout_height="140dp"
                    fresco:roundedCornerRadius="5dp"
                    fresco:roundTopLeft="true"
                    fresco:progressBarAutoRotateInterval="2000"
                    fresco:progressBarImage="@drawable/jz" />

                <TextView
                    android:id="@+id/tv_hot_1"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_hot_2"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="2dp"
                    android:textColor="#f00"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sdv_hot_2"
                    android:layout_width="180dp"
                    android:layout_height="140dp"
                    fresco:roundedCornerRadius="5dp"
                    fresco:roundTopRight="true"
                    fresco:progressBarAutoRotateInterval="2000"
                    fresco:progressBarImage="@drawable/jz" />

                <TextView
                    android:id="@+id/tv_hot_3"
                    android:layout_width="180dp"
                    android:layout_height="20dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_hot_4"
                    android:layout_width="180dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="2dp"
                    android:textColor="#f00"
                    android:textSize="12sp" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sdv_hot_3"
                    android:layout_width="180dp"
                    android:layout_height="140dp"
                    fresco:roundedCornerRadius="5dp"
                    fresco:roundBottomLeft="true"
                    fresco:progressBarAutoRotateInterval="2000"
                    fresco:progressBarImage="@drawable/jz" />

                <TextView
                    android:id="@+id/tv_hot_5"
                    android:layout_width="180dp"
                    android:layout_height="20dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_hot_6"
                    android:layout_width="160dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="2dp"
                    android:textColor="#f00"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sdv_hot_4"
                    android:layout_width="180dp"
                    android:layout_height="140dp"
                    fresco:roundedCornerRadius="5dp"
                    fresco:roundBottomRight="true"
                    fresco:placeholderImage="@drawable/za"
                    fresco:progressBarAutoRotateInterval="1000"
                    fresco:progressBarImage="@drawable/jz" />

                <TextView
                    android:id="@+id/tv_hot_7"
                    android:layout_width="180dp"
                    android:layout_height="20dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_hot_8"
                    android:layout_width="180dp"
                    android:layout_height="20dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_marginTop="2dp"
                    android:textColor="#f00"
                    android:textSize="12sp" />
            </LinearLayout>

        </TableRow>

    </TableLayout>

</LinearLayout>